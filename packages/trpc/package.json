{
  "name": "@repo/trpc",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules .next .cache tsconfig.tsbuildinfo",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@repo/common": "workspace:*",
    "@repo/database": "workspace:^",
    "@repo/auth": "workspace:^",
    "@tanstack/react-query": "^5.29.2",
    "@trpc/client": "11.0.0-rc.340",
    "@trpc/react-query": "11.0.0-rc.340",
    "@trpc/server": "11.0.0-rc.340",
    "firebase-admin": "^12.1.0",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.1",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.11.16",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "vitest": "^1.2.2"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./container": {
      "import": "./src/container/index.ts",
      "require": "./src/container/index.ts"
    },
    "./constants": {
      "import": "./src/constants/index.ts",
      "require": "./src/constants/index.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/index.ts",
        "src/container/index.ts",
        "src/constants/index.ts"
      ]
    }
  }
}
