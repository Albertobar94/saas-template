{
  "name": "@repo/database",
  "private": true,
  "scripts": {
    "codegen": "prisma generate",
    "clean": "git clean -xdf .turbo node_modules .cache tsconfig.tsbuildinfo",
    "db:up": "  docker-compose up -d",
    "db:down": "docker-compose down --remove-orphans",
    "db:migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
    "env:local": "  pnpm vercel:link:dev  && vercel env pull --token $VERCEL_TOKEN --environment=preview",
    "env:dev": "    pnpm vercel:link:dev  && vercel env pull --token $VERCEL_TOKEN --environment=production",
    "env:prod": "   pnpm vercel:link:prod && vercel env pull --token $VERCEL_TOKEN --environment=production",
    "env:staging": "pnpm vercel:link:stag && vercel env pull --token $VERCEL_TOKEN --environment=production",
    "format": "prisma format",
    "lint": "    eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "vercel:link:dev": " vercel link --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --project $VERCEL_PORTAL_PROJECT_DEVELOPMENT --yes",
    "vercel:link:prod": "vercel link --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --project $VERCEL_PORTAL_PROJECT_PRODUCTION --yes",
    "vercel:link:stag": "vercel link --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --project $VERCEL_PORTAL_PROJECT_STAGING --yes",
    "postinstall": "pnpm codegen"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "bufferutil": "^4.0.8",
    "prisma": "^5.13.0",
    "zod": "^3.22.4",
    "zod-prisma-types": "^3.1.6"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.1",
    "@prisma/adapter-neon": "^5.13.0",
    "@prisma/client": "^5.13.0",
    "ws": "^8.17.0"
  },
  "files": [
    "/dist"
  ],
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./*": {
      "import": "./src/*/index.ts",
      "require": "./src/*/index.ts",
      "types": "./src/*/index.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/*/index.ts",
        "./src/index.ts"
      ]
    }
  }
}
