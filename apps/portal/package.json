{
  "name": "@repo/portal",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "ci:prepare": "vercel link --project $PORTAL_PROJECT_NAME --yes --token $VERCEL_TOKEN && vercel env pull --environment=production --yes --token $VERCEL_TOKEN",
    "clean": "git clean -xdf .turbo node_modules .next .cache tsconfig.tsbuildinfo",
    "dev": "next dev",
    "env:local": "  pnpm vercel:link:dev  && vercel env pull --token $VERCEL_TOKEN --environment=preview",
    "env:dev": "    pnpm vercel:link:dev  && vercel env pull --token $VERCEL_TOKEN --environment=production",
    "env:prod": "   pnpm vercel:link:prod && vercel env pull --token $VERCEL_TOKEN --environment=production",
    "env:staging": "pnpm vercel:link:stag && vercel env pull --token $VERCEL_TOKEN --environment=production",
    "format": "  prettier --write .",
    "lint": "    eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "start": "next start",
    "test:server": "jest --config jest.config.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "vercel:link:dev": " vercel link --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --project $VERCEL_PORTAL_PROJECT_DEVELOPMENT --yes",
    "vercel:link:prod": "vercel link --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --project $VERCEL_PORTAL_PROJECT_PRODUCTION --yes",
    "vercel:link:stag": "vercel link --token $VERCEL_TOKEN --scope $VERCEL_SCOPE --project $VERCEL_PORTAL_PROJECT_STAGING --yes"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@repo/auth": "workspace:^",
    "@repo/common": "workspace:*",
    "@repo/database": "workspace:^",
    "@repo/trpc": "workspace:^",
    "@repo/ui": "workspace:*",
    "@sentry/integrations": "^7.105.0",
    "@sentry/nextjs": "^7.105.0",
    "@tanstack/react-query": "^5.29.2",
    "@trpc/client": "11.0.0-rc.340",
    "@trpc/react-query": "11.0.0-rc.340",
    "@trpc/server": "11.0.0-rc.340",
    "next": "^14.1.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.3",
    "recharts": "^2.12.6",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.0",
    "@repo/config": "workspace:*",
    "@types/eslint": "^8.56.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "jest": "^29.7.0",
    "postcss": "^8.4.34",
    "reflect-metadata": "^0.2.2",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2"
  }
}
